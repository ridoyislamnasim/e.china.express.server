{
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "module": "commonjs",
    "target": "es2019",
    "esModuleInterop": true,
    "strict": true,
    "typeRoots": ["src/**/*.ts",
    "src/types/**/*.d.ts"],
    "resolveJsonModule": true,
    "skipLibCheck": true
  },
  "include": ["src"]
}
